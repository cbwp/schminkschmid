vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-o-{prop} args
	-ms-{prop} args
	{prop} args

borderRadius()
	vendor('border-radius', arguments)

transition()
	vendor('transition', arguments)

transform()
	vendor('transform', arguments)

boxShadow()
	vendor('box-shadow', arguments)

selection(bg,clr)
	::selection
		background bg
		color clr
	::-moz-selection
		background bg
		color clr

clearfix()
	zoom 1
	&:after
	&:before
		content ""
		display table
	&:after
		clear both

bgc(arguments)
	background-color arguments

tb()
	box-shadow inset 0 0 10px #0f0