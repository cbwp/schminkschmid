@import functions

/***************************************************************************************************/
// VARIABLES
/***************************************************************************************************/
/***************************************************************************************************/

fontStyle1 = 0.9em 'Open Sans', sans-serif

color1 = #411137
color2 = #9a579a
color3 = #346bae

mleft = 5%
maxwidth = 90%

/***************************************************************************************************/
// FOMTS
/***************************************************************************************************/
/***************************************************************************************************/
h1 
	font-size 3em
	font-weight 300

h2 
	font-weight 300

a 
	color white
	transition(color 0.3s ease)
	&:hover 
		color color2
		text-decoration none

p 
	font-weight 300
	line-height 1.4em
/***************************************************************************************************/
// MAIN
/***************************************************************************************************/
/***************************************************************************************************/
body
	margin 0
	padding 0
	font fontStyle1

section#bgimage 
	position fixed
	bottom 0px
	left 20px
	width calc(100% - 40px)
	height calc(100% - 20px)
	z-index -2

	& div
		width 100%
		height 100%
		background-size cover
		background-position center

aside.logo
	background-image url(../images/logo.png)
	background-size contain
	background-repeat no-repeat
header#ss 
	position fixed
	margin-left mleft
	margin-top (mleft / 3)
	width 200px

	& aside#logo
		width 200%
		padding-bottom 90%
	
	& aside.navhead
		width calc(100% - 10px)
		bgc(color1)
		color white
		padding 2px 0 2px 10px
		margin-bottom 1px
		margin-top -50px
		margin-left 20px

	& nav.mainnav
		margin-left 20px
		width calc(100% - 0px)
		& ul 
			margin 0
			padding 0
			& li 
				list-style-type none
				margin 0
				bgc(color3)
				margin-bottom 1px
				padding 2px 0 2px 10px
				transition(background-color 0.5s ease)
				& a 
					display block
					color white
					width 100%
					text-decoration none
			
				&.nav-selected,
				&:hover
					bgc(color2)
aside#logomob
	display none

section.cnt 
	position relative
	float right
	margin 20px 20px 0 0
	width 50%
	padding 5% 5% 0% 5%
	min-height 1200px
	bgc(color1)
	color white
	border-left 20px solid color3

@media screen and (max-width: 1300px)
	header#ss 
		width 150px
		& nav.mainnav
			width 140%
		
		& aside.navhead
			width calc(140% - 10px)
			margin-top -20px

@media screen and (max-width: 1024px)
	h1 
		font-size 2em

	h2 
		font-size 1.3em
	aside#logomob
		display block
		margin-left 10%
		margin-top 20%
		width 80%
		padding-bottom 50%

	header#ss 
		position fixed
		top 0px
		left 0px
		margin-left 0
		margin-top 0
		width 100%

		& aside.navhead
			width calc(100%)
			text-align center
			padding 7px 0 7px 0px
			border-bottom 1px solid white
			margin-top 0px
			margin-left 0
			bgc(color2)
			z-index 20
			
			
		& nav.mainnav
			margin-left 0
			margin-top 0
			width 100%
			display none
			& ul 
				& li 
					padding 7px 0 7px 0px
					border-bottom 1px solid white
					margin-bottom 0
					text-align center
			
			&.show
				display block
			
		& aside#logo 
			display none
	
	section#bgimage 
		position absolute
		bottom auto 
		margin-top 0%
	
	section.cnt 
		float none
		margin 80% 20px 0 0
		width 90%
		padding 5% 5% 5% 5%
		min-height auto
		border-left none
		z-index 0

@media screen and (max-width: 1024px) and (orientation: landscape)
	aside#logomob
		display block
		margin-left 0%
		margin-top 5%
		width 50%
		padding-bottom 25%

	header#ss 	
		& aside.navhead
			width calc(50%)
			float right
			text-align center
			padding 7px 0 7px 0px
			border-bottom 0px solid white
			margin-top 0px
			margin-left 0
			bgc(color2)
			z-index 20
		& nav.mainnav
			& ul 
				& li 
					float left 
					width calc(50% - 2px)
					padding 7px 0 7px 0px
					border-bottom 1px solid white
					border-left 1px solid white
					border-right 1px solid white
					margin-bottom 0
					text-align center
	
	section.cnt 
		float none
		margin 30% 20px 0 0
		width 90%
		padding 5% 5% 5% 5%
		min-height auto
		border-left none
		z-index 0